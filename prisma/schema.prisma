generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Service {
  id          Int             @id @default(sequence())
  name        String
  description String
  list        String[]
  image       String
  price       Int
  category    ServiceCategory
  type        ServiceType
}

enum ServiceCategory {
  TikTok
  Instagram
  Others
}

enum ServiceType {
  Package
  Service
  CustomService
}

model Customer {
  id     Int     @id @default(sequence())
  email  String  @unique
  orders Order[]
}

model Order {
  id         Int         @id @default(sequence())
  email      String
  contents   String
  customerName String
  status     OrderStatus
  customerId Int?
  customer   Customer?   @relation(fields: [customerId], references: [id])
}

enum OrderStatus {
  Niezrealizowane
  Zrealizowane
}
