generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Service {
  id          Int             @id @default(autoincrement())
  name        String
  description String?
  list        String[]
  image       String?
  price       Decimal
  category    ServiceCategory
  type        ServiceType
  requireLink String?
}

enum ServiceCategory {
  TikTok
  Instagram
  Others
}

enum ServiceType {
  Package
  Service
  CustomService
  Account
}

model Order {
  id     Int         @id @default(autoincrement())
  email  String
  status OrderStatus
}

enum OrderStatus {
  Niezrealizowane
  Zrealizowane
}
