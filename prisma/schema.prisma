generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Service {
  id          Int             @id @default(autoincrement())
  name        String
  description String?
  list        String[]
  image       String?
  price       Decimal
  category    ServiceCategory
  type        ServiceType
  requireLink String?
  orderId     Int?
}

enum ServiceCategory {
  TikTok
  Instagram
  Others
}

enum ServiceType {
  Package
  Service
  CustomService
  Account
}

model Order {
  id             Int         @id @default(autoincrement())
  email          String
  contents       String
  status         OrderStatus
  Customer       Customer?   @relation(fields: [customerId], references: [id])
  customerId     Int?
  dateOfPurchase DateTime    @default(now())
}

enum OrderStatus {
  Niezrealizowane
  Zrealizowane
}

model Customer {
  id          Int     @id @default(autoincrement())
  name        String
  email       String  @unique
  phoneNumber String
  orders      Order[]
}

model Account {
  id                        Int             @id @default(autoincrement())
  category                  ServiceCategory
  price                     Decimal
  followsCount              Int
  genderType                GenderType
  genderPercentage          Int
  polishFollowersPercentage Int
  age18to24Percentage       Int
}

enum GenderType {
  Male
  Female
}
