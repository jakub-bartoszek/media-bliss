generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Service {
  id          Int             @id @default(sequence())
  name        String
  description String
  list        String[]
  image       String
  price       Int
  category    ServiceCategory
  type        ServiceType
}

model CustomServiceField {
  id       Int             @id @default(sequence())
  name     String
  price    Int
  category ServiceCategory
  maxCount Int?
}

model Order {
  id       Int         @id @default(sequence())
  email    String
  contents String
  status   OrderStatus
}

enum ServiceCategory {
  TikTok
  Instagram
  Others
}

enum ServiceType {
  Package
  Others
}

enum OrderStatus {
  Niezrealizowane
  Zrealizowane
}
